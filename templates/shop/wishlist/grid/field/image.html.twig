{% if data.imagesByType('thumbnail') is not empty %}
    {% set path = data.imagesByType('thumbnail').first.path|imagine_filter(filter|default('sylius_shop_product_thumbnail')) %}
{% elseif data.images.first %}
    {% set path = data.images.first.path|imagine_filter(filter|default('sylius_shop_product_thumbnail')) %}
{% else %}
    {% set path = asset('build/shop/images/200x200.png', 'shop') %}
{% endif %}

<img class="img-fluid" src="{{ path }}" {{ sylius_test_html_attribute('main-image') }} alt="{{ 'sylius.ui.product'|trans }} {{ data.name }} {{ 'sylius.ui.image'|trans }}" />
